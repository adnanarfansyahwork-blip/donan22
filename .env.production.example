# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and adjust values for production

APP_NAME=Donan22
APP_ENV=production
APP_KEY=
APP_DEBUG=false
# IMPORTANT: Set this to your actual domain with HTTPS
APP_URL=https://donan22.com

# ===========================================
# CLOUDFLARE PROXY SETTINGS
# ===========================================
# Enable this when using Cloudflare as proxy
CLOUDFLARE_ENABLED=true
# Trust all proxies for Cloudflare (uses middleware to detect real IP)
TRUSTED_PROXIES=*

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=donan22.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache and Queue
CACHE_STORE=file
CACHE_PREFIX=donan22_cache

QUEUE_CONNECTION=database

# Mail Configuration (for newsletter, etc)
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=your_email@donan22.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@donan22.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security Settings
SANCTUM_STATEFUL_DOMAINS=donan22.com

# Force HTTPS
FORCE_HTTPS=true
